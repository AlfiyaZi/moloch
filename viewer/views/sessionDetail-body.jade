div.packet-options

if (session._err)
  div.alert.alert-danger 
    span.fa.fa-exclamation-triangle
    strong &nbsp; #{session._err}
else 
  if (session.pa > 200)
    h5.text-yellow 
      span.fa.fa-info-circle.fa-lg
      | &nbsp; Only showing first 200 packets

  div.row#textpacket
    div.col-md-6
      h4 Source
    div.col-md-6
      h4 Destination

  each item, i in data
    div.row
      if item.client == 0
        div.col-md-6
          if (item.ts)
            div.session-detail-ts(ts="#{item.ts}")
              em.ts-value #{item.ts}
              span.pull-right #{item.bytes} bytes
          |!{item.html}
        div.col-md-6
      else
        div.col-md-6
        div.col-md-6
          if (item.ts)
            div.session-detail-ts(ts="#{item.ts}")
              em.ts-value #{item.ts}
              span.pull-right #{item.bytes} bytes
          |!{item.html}
